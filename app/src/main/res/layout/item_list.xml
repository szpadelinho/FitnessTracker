<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_list_name"
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default Name"
                />
            <TextView
                android:id="@+id/item_list_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default Activity Type"
                />
            <TextView
                android:id="@+id/item_list_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default Distance"
                />
            <TextView
                android:id="@+id/item_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default Time"
                />
            <TextView
                android:id="@+id/item_list_kcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default Kcal"
                />
            <TextView
                android:id="@+id/item_list_intensity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default Intensity"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/item_list_icon"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:src="@drawable/baseline_question_mark_24"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/item_list_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default Desc"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>